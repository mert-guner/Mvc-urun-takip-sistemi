@{ 
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Mert Can Güner</title>
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    <link href="~/Content/style.css" rel="stylesheet">
</head>

<body>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="accordion-header">
                    <h2 class="modal-title" style="padding-left:50px; padding-top:50px;">Üyelik Kayıt Bilgisi</h2>
                </div>
                @using (Html.BeginForm("Uye", "Login", FormMethod.Post))
                {
                    <div style="padding:50px;">
                        <form class="form-group">
                            <div class="form-floating mb-3">
                                @*<label>Kullanıcı Adı</label>
        <input type="text" name="urun_adi" class="form-control" />*@
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="kullanici_adi" required>
                                <label for="floatingInput">Email address</label>
                            </div>

                            <div style="margin-top:20px;" class="form-floating mb-3">
                                @*<label>Şifre</label>
        <input type="text" name="urun_aciklama" class="form-control" />*@
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="sifre" required>
                                <label for="floatingPassword">Password</label>
                            </div>

                            <div style="margin-top:50px;">
                                <button type="submit" class="btn btn-info" style="color:white;">Üye Ol</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                            </div>
                        </form>
                    </div>

                }
            </div>
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Sign In</h5>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {


                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="kullanici_adi" required>
                                <label for="floatingInput">Email address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="sifre" required>
                                <label for="floatingPassword">Password</label>
                            </div>
                            <br />
                            <div class="d-grid">
                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                    Sign
                                    in
                                </button>
                            </div>
                            <hr class="my-4">
                            <div class="d-grid mb-2">
                                @*<button class="btn btn-google btn-login text-uppercase fw-bold" href="/Login/Uye/" data-toggle="modal" data-target="#Modal1">
                    Üye Ol
                </button>*@
                                <a class="btn btn-google btn-login text-uppercase fw-bold" href="#" data-toggle="modal" data-target="#Modal1">Üye Ol</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
